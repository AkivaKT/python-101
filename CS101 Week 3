# Extra Challenge

# TODO -> Calculate the average of the following variables
#         Use the int() funtion.
#         "The average of [123, 23, 13] is 54"
value1 = '123'
value2 = '23'
value3 = '16'
 
V1 = int(value1)
V2 = int(value2)
V3 = int(value3)
print('The average of ' + '[' + value1 + ', ' + value2 + ', ' + value3 + ']' + ' is ' + str(int((V1 + V2 + V3)/3)))
print('The average of [' + value1 + ', ' + value2 + ', ' + value3 + '] is ' +  str(int((V1 + V2 + V3)/3)))

# TODO -> "John Brown"
name1 = 'john'
name2 = 'brown'

print(name1.title(), name2.title())
