# TODO -> "Hello World"
print('Hello World')


# TODO -> "Hello World is length 11", using the len() function
H1 = 'Hello World'
print('Hello World is length', len('Hello World'))
print(H1, 'is length', len(H1))

# TODO -> "John Brown" using these variables using + operator
name1 = 'John'
name2 = 'Brown'
print(name1 + " " + name2)


# TODO -> "John Brown" using these variables using , (commas) in the print statement
#         Use the varlables from above
print(name1, name2)

# TODO -> "John Brown is 34 years old" 
age = 34
print(name1, name2, 'is', age, 'years old') 

# TODO -> "ABC" 
print('{0}{1}{2}'.format('A', 'B', 'C'))


# TODO -> "CBA"
print('{2}{1}{0}'.format('A', 'B', 'C'))


# TODO -> "ABCBA" 
print('{0}{1}{2}{1}{0}'.format('A', 'B', 'C'))


# TODO -> "AABBCC"
print('{0}{0}{1}{1}{2}{2}'.format('A', 'B', 'C'))


# TODO -> "John"
print('{0}{3}{1}{2}'.format('J', 'h', 'n', 'o'))


# TODO -> "John Brown is 34 years old" using the format() function
name1 = 'John'
name2 = 'Brown'
age = 34
print( '{0} {1} is {2} years old'.format(name1, name2, age))

